    <script>
  // Khởi tạo khi trang được load
  document.addEventListener('DOMContentLoaded', () => {
      // Thiết lập các ghế đã bán
      const soldSeats = []; // Đây là danh sách từ server (ví dụ: ["A01", "B05"])
      soldSeats.forEach(seatId => {
          const seat = document.querySelector(`.seat[data-seat='${seatId}']`);
          if (seat) {
              seat.classList.add('sold');
          }
      });

      // Thêm sự kiện click cho các ghế khả dụng
      document.querySelectorAll('.seat:not(.sold)').forEach(seat => {
          seat.addEventListener('click', () => {
              seat.classList.toggle('selected');
              updateSelectedSeats(); // Cập nhật danh sách ghế đã chọn
          });
      });
  });

  // Cập nhật danh sách ghế đã chọn
  function updateSelectedSeats() {
      // Lấy danh sách ghế được chọn
      const selectedSeats = Array.from(document.querySelectorAll('.seat.selected'))
          .map(seat => seat.textContent.trim()); // Lấy nội dung của mỗi ghế

      // Cập nhật hiển thị số ghế và danh sách ghế
      document.getElementById('selectedSeat').textContent = selectedSeats.join(', ') || 'Chưa chọn';

      // Cập nhật số lượng ghế
      const seatCount = selectedSeats.length;
      document.getElementById('seatCount').textContent = seatCount;

      // Cập nhật tổng tiền
      const giaTien = parseInt('@ViewBag.GiaTien'); // Giá tiền mỗi ghế
      const totalAmount = seatCount * giaTien;

      // Cập nhật giá trị "Tổng tiền lượt đi" và "Tổng tiền" trong chi tiết giá
      document.querySelectorAll('#totalAmount').forEach(element => {
          element.textContent = totalAmount.toLocaleString() + ' VNĐ';
      });
  }

 // Sự kiện click cho nút "Thanh toán"
document.addEventListener('DOMContentLoaded', () => {
    const payButton = document.querySelector('.btn-pay');

    if (payButton) {
        payButton.addEventListener('click', (event) => {
             //Lấy thông tin từ các input khách hàng
            const fullname = document.getElementById('HoVaTen').value.trim();
            const phone = document.getElementById('SoDienThoai').value.trim();
            const email = document.getElementById('Email').value.trim();

            if (!fullname || !phone || !email) {
                alert("Vui lòng nhập đầy đủ thông tin khách hàng!");
                return;
            }

            // Lấy danh sách ghế được chọn
            const selectedSeats = Array.from(document.querySelectorAll('.seat.selected'))
                .map(seat => seat.textContent.trim());
            const seatCount = selectedSeats.length;

            if (seatCount === 0) {
                alert("Vui lòng chọn ít nhất một ghế!");
                return;
            }

            // Giá tiền mỗi ghế
            const giaTien = parseInt('@ViewBag.GiaTien') || 0;
            if (giaTien === 0) {
                alert("Giá tiền không hợp lệ!");
                return;
            }

            // Tính tổng tiền
            const totalAmount = seatCount * giaTien;

            // Điền thông tin vào các input hidden trong form
            document.getElementById('SoLuongGhe').value = seatCount;
            document.getElementById('SoGhe').value = selectedSeats.join(', ');
            document.getElementById('TongTien').value = totalAmount;
            document.getElementById('ViTriGhe').value = selectedSeats[0] || ''; // Vị trí ghế đầu tiên

            // Submit form
            document.getElementById('datVeForm').submit();
        });
    }
});
document.querySelector('.btn-pay').addEventListener('click', () => {
    const maChuyenXe = document.getElementById('MaChuyenXe').value;
    const selectedSeats = Array.from(document.querySelectorAll('.seat.selected'))
        .map(seat => seat.dataset.seat);
    const fullname = document.getElementById('HoVaTen').value.trim();
    const phone = document.getElementById('SoDienThoai').value.trim();
    const email = document.getElementById('Email').value.trim();
    const giaTien = parseInt('@ViewBag.GiaTien') || 0;

    if (!fullname || !phone || !email || selectedSeats.length === 0) {
        alert("Vui lòng nhập đầy đủ thông tin và chọn ghế!");
        return;
    }

    // Gửi dữ liệu qua AJAX hoặc submit form
    fetch('@Url.Action("DatVe", "Ve")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ maChuyenXe, viTriGhe: selectedSeats, hoVaTen: fullname, soDienThoai: phone, email, giaTien })
    })
    .then(response => {
        if (response.ok) {
            window.location.href = '@Url.Action("DatVeThanhToan", "Ve")';
        } else {
            alert("Có lỗi xảy ra khi đặt vé!");
        }
    });
});


