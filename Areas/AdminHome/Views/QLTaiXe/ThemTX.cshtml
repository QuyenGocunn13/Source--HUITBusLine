@using QLBVXK.Models
@model TAIXE

@{
    ViewBag.Title = "Thêm Mới Tài Xế";
    Layout = "~/Areas/AdminHome/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Thông tin cá nhân</h3>
            </div>
            <div class="card-body">
                <!-- Hiển thị thông báo thành công -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Thành công!</strong> @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Hiển thị thông báo lỗi -->
                @if (TempData["ErrorMessages"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Lỗi:</strong> @TempData["ErrorMessages"]
                    </div>
                }

                <!-- Form thêm tài xế -->
                @using (Html.BeginForm("ThemTX", "QLTaiXe", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.MaXe, "Mã Xe")
                        @Html.DropDownListFor(m => m.MaXe, (SelectList)ViewBag.MaXeList, "Chọn mã xe", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.MaXe, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.TenTaiXe, "Tên Tài Xế")
                        @Html.TextBoxFor(m => m.TenTaiXe, new { @class = "form-control", placeholder = "Nhập tên tài xế" })
                        @Html.ValidationMessageFor(m => m.TenTaiXe, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại")
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.CCCD, "CCCD")
                        @Html.TextBoxFor(m => m.CCCD, new { @class = "form-control", placeholder = "Nhập CCCD" })
                        @Html.ValidationMessageFor(m => m.CCCD, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DiaChi, "Địa Chỉ")
                        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" value="Thêm Tài Xế" class="btn btn-primary" />
                        <a href="@Url.Action("DSTaiXe", "QLTaiXe")" class="btn btn-secondary">Trở về</a>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
