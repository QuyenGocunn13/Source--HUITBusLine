@using QLBVXK.Models
@model HANHKHACH

@{
    ViewBag.Title = "Sửa Thông Tin Hành Khách";
    Layout = "~/Areas/AdminHome/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin cá nhân</h3>
            </div>
            <div class="card-body">
                <!-- Hiển thị thông báo thành công -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Thành công!</strong> @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Hiển thị thông báo lỗi -->
                @if (TempData["ErrorMessages"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Lỗi:</strong> @TempData["ErrorMessages"]
                    </div>
                }

                @using (Html.BeginForm("SuaKH", "QLKhachHang", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.MaHanhKhach) <!-- Giữ lại ID của hành khách -->

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserID, "User ID")
                        @Html.TextBoxFor(m => m.UserID, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.TenHanhKhach, "Họ Tên")
                        @Html.TextBoxFor(m => m.TenHanhKhach, new { @class = "form-control", placeholder = "Nhập họ tên hành khách" })
                        @Html.ValidationMessageFor(m => m.TenHanhKhach, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.GioiTinh, "Giới Tính")
                        @Html.DropDownListFor(m => m.GioiTinh, new SelectList(new[] { "Nam", "Nữ", "Khác" }), "Chọn giới tính", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DiaChi, "Địa Chỉ")
                        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ hành khách" })
                        @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại")
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Thêm dòng để căn chỉnh các nút sang bên phải -->
                    <div class="form-group text-right">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        @Html.ActionLink("Trở về", "DSKhachHang", "QLKhachHang", null, new { @class = "btn btn-secondary ml-2" })
                    </div>
                }
            </div>
        </div>
    </section>
</div>
