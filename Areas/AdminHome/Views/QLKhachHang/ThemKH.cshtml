@using QLBVXK.Models
@model HANHKHACH

@{
    ViewBag.Title = "Thêm Mới Hành Khách";
    Layout = "~/Areas/AdminHome/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm Mới Hành Khách</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Danh sách hành khách", "DSKhachHang", "QLKhachHang")
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Thông tin cá nhân</h3>
            </div>
            <div class="card-body">
                <!-- Hiển thị thông báo thành công -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Thành công!</strong> @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Hiển thị thông báo lỗi -->
                @if (TempData["ErrorMessages"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Lỗi:</strong> @TempData["ErrorMessages"]
                    </div>
                }

                <!-- Form thêm hành khách -->
                @using (Html.BeginForm("ThemKH", "QLKhachHang", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.TenHanhKhach, "Họ Tên")
                        @Html.TextBoxFor(m => m.TenHanhKhach, new { @class = "form-control", placeholder = "Nhập họ tên hành khách" })
                        @Html.ValidationMessageFor(m => m.TenHanhKhach, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.GioiTinh, "Giới Tính")
                        @Html.DropDownListFor(m => m.GioiTinh, new SelectList(new[] { "Nam", "Nữ", "Khác" }, "Chọn giới tính"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.DiaChi, "Địa Chỉ")
                        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại")
                        @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" value="Thêm Hành Khách" class="btn btn-primary" />
                        <a href="@Url.Action("DSKhachHang", "QLKhachHang")" class="btn btn-secondary">Trở về</a>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
